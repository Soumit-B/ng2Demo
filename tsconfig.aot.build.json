{
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es6"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "removeComments": true,
        "sourceMap": false,
        "target": "es5",
        "types": [
            "jasmine",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "tmp",
        "target",
        "src/**/*.spec.ts"
    ]
}